{
  "private": true,
  "name": "tsdk-monorepo",
  "packageManager": "pnpm@7.27.1",
  "scripts": {
    "lint": "turbo lint",
    "test": "turbo test",
    "build": "turbo build",
    "dev": "turbo dev",
    "start:tsdk": "pnpm build:tsdk && pnpm --filter tsdk start",
    "build:tsdk": "pnpm --filter tsdk-server-adapters build",
    "dev:docs": "pnpm --filter @fe-sdk/docs start",
    "build:docs": "pnpm --filter @fe-sdk/docs build",
    "dev:web-example": "pnpm --filter server-example --filter web-example dev",
    "dev:app-example": "pnpm --filter server-example --filter app-example dev",
    "dev:app-web-example": "pnpm --filter server-example --filter app-example dev",
    "build:web-example": "pnpm --filter server-example --filter web-example build",
    "serve:web-example": "pnpm build:web-example && pnpm --filter server-example --filter web-example serve",
    "start-publish": "pnpm --filter tsdk --filter tsdk-server-adapters start-publish",
    "start-prepare": "chmod +x ./node_modules/.bin/husky && husky install && chmod +x ./node_modules/.bin/cross-env && chmod +x ./node_modules/.bin/nest"
  },
  "devDependencies": {
    "husky": "^8.0.3",
    "lint-staged": "^13.1.2",
    "turbo": "^1.8.2"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "@babel/*",
        "expo-modules-*",
        "typescript"
      ]
    },
    "packageExtensions": {},
    "overrides": {
      "uuid": "^3.4.0"
    }
  },
  "prettier": {
    "printWidth": 100,
    "tabWidth": 2,
    "singleQuote": true,
    "trailingComma": "es5",
    "bracketSameLine": true
  },
  "lint-staged": {
    "*.{ts,tsx,mjs,js,mts}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{md,css}": [
      "prettier --write"
    ]
  }
}
