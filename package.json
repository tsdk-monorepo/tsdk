{
  "private": true,
  "name": "tsdk-monorepo",
  "packageManager": "pnpm@7.14.0",
  "scripts": {
    "lint": "turbo lint",
    "test": "turbo test",
    "build": "turbo build",
    "dev": "turbo dev",
    "start": "pnpm --filter tsdk start",
    "start-publish": "pnpm --filter tsdk --filter tsdk-server-adapters start-publish",
    "start-prepare": "chmod +x ./node_modules/.bin/husky && husky install && chmod +x ./node_modules/.bin/cross-env && chmod +x ./node_modules/.bin/nest"
  },
  "devDependencies": {
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "turbo": "^1.6.1",
    "typescript": "^4.8.4"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "@babel/*",
        "expo-modules-*",
        "typescript"
      ]
    }
  },
  "prettier": {
    "printWidth": 100,
    "tabWidth": 2,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "lint-staged": {
    "*.{ts,tsx,js,css,md}": "prettier --write"
  }
}
