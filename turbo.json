{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "lint": {
      "cache": false,
      "outputs": []
    },
    "check:types": {
      "cache": false
    },
    "test": {
      "dependsOn": ["lint", "build"],
      "inputs": ["**/*.{ts,tsx,js,jsx}"]
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "build/**", "dist**", "node_modules/.cache/metro/**"]
    },
    "dev": {
      "cache": false,
      "dependsOn": ["^build"]
    }
  }
}
