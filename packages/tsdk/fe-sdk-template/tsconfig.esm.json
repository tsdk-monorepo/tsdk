{
  "compilerOptions": {
    "strict": true,
    "strictPropertyInitialization": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "declaration": true,
    "noImplicitAny": true,
    "module": "ES2015",
    "target": "ES2015",
    "outDir": "esm",
    "lib": ["ES2015", "ES2019", "DOM"],
    "incremental": true,
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true
  },
  "include": ["./src"]
}
